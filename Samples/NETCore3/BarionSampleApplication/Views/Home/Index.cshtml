@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Sample Website with Barion integration</h1>
    <div>
        <p>Pay for a product via Barion: </p>
        @using (Html.BeginForm("StartPayment", "Barion"))
        {
            <label for="name">Name: </label>
            <input type="text" id="name" name="product.name" />

            <label for="price">Price: </label>
            <input type="number" id="price" name="product.price" />

            <button type="submit">Pay via Barion</button>
        }
    </div>
</div>
